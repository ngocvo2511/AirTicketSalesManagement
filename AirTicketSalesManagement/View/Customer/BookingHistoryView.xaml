<UserControl x:Class="AirTicketSalesManagement.View.Customer.BookingHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:uc ="clr-namespace:AirTicketSalesManagement.View.Customer"
             xmlns:local="clr-namespace:AirTicketSalesManagement.View.Customer"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="980">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0 10 0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Lịch sử đặt vé" 
                   FontSize="30" FontWeight="Bold"
                   Margin="30 0 0 0"
                   Foreground="#2C3E50"
                   VerticalAlignment="Center" />

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <ToggleButton Template="{StaticResource ProfilePopupTemplate}" 
                          Width="60"
                          Height="60"
                          Margin="0 0 40 0"/>
            </StackPanel>
        </Grid>
        <!-- Search Bar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
            Margin="20 0 20 20" HorizontalAlignment="Left">
            <TextBox x:Name="SearchTextBox" Width="300" Height="35" 
             Margin="0 0 10 0" 
             materialDesign:HintAssist.Hint="Tra cứu lịch sử đặt vé" />
            <Button Width="40" Height="35" Background="#3498DB" 
            Foreground="White" Padding="5">
                <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20"/>
            </Button>
        </StackPanel>

        <!-- Content -->


        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20" Grid.Row="2">
            <StackPanel>
                <TextBlock Text="Không có chuyến bay nào" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            FontSize="16" 
            FontWeight="Bold"
            Foreground="Gray" 
            Visibility="{Binding BookingHistory.Count, Converter={StaticResource ZeroToVisibleConverter}}"/>
                <ItemsControl ItemsSource="{Binding BookingHistory}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,20"
                 BorderBrush="#DDD" BorderThickness="1" Effect="{DynamicResource ShadowEffect}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Row 1: Thông tin chuyến bay và trạng thái -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding FlightNumber}" FontSize="16" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Route}" FontSize="14"/>
                                            <TextBlock Text="{Binding DepartureTime, StringFormat='Khởi hành: {0:dd/MM/yyyy HH:mm}'}" FontSize="13"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding Status}" Grid.Column="1"
                                Foreground="{Binding StatusColor}"
                                FontWeight="Bold" VerticalAlignment="Top" FontSize="14"/>
                                    </Grid>

                                    <!-- Row 2: Thông tin đặt vé -->
                                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,0">
                                        <TextBlock Text="{Binding BookingCode, StringFormat='Mã đặt vé: {0}'}" Margin="0,10,20,0"/>
                                        <TextBlock Text="{Binding PassengerCount, StringFormat='Số hành khách: {0}'}" Margin="0,10,20,0"/>
                                        <TextBlock Text="{Binding TotalPrice, StringFormat='Tổng tiền: {0:N0} đ'}" Margin="0,10,20,0"/>
                                    </StackPanel>

                                    <!-- Row 3: Nút -->
                                    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
                                        <Button Content="Chi tiết"
                             Command="{Binding DataContext.ViewDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                             CommandParameter="{Binding}"
                             Padding="10,5" Margin="0,0,10,0"/>

                                        <Button Content="Huỷ vé"
                             Background="Red" Foreground="White"
                             Command="{Binding DataContext.CancelBookingCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                             CommandParameter="{Binding}"
                             Visibility="{Binding CanCancel, Converter={StaticResource BoolToVisibilityConverter}}"
                             Padding="10,5"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
