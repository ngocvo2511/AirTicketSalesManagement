<UserControl x:Class="AirTicketSalesManagement.View.Customer.BookingHistoryDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirTicketSalesManagement.View.Customer"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="980">
    <Border Padding="20" Background="White" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
        <StackPanel>
            <!-- Tiêu đề -->
            <TextBlock Text="Chi tiết đặt vé" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- Thông tin chuyến bay -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                <TextBlock Text="{Binding FlightInfo}" FontSize="14" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding FlightDate}" FontSize="14"/>
                <TextBlock Text="{Binding DepartureTime}" FontSize="14"/>
            </StackPanel>

            <!-- Danh sách hành khách -->
            <GroupBox Header="Danh sách hành khách" Margin="0,0,0,15">
                <ItemsControl ItemsSource="{Binding Passengers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10" Margin="0,5,0,5" Background="#F9F9F9" CornerRadius="5">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Left">
                                        <TextBlock Text="{Binding FullName}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding TicketType}" FontStyle="Italic"/>
                                        <TextBlock Text="{Binding Price, StringFormat='Giá vé: {0:N0} đ'}"/>
                                        <TextBlock Text="{Binding Status}"/>
                                    </StackPanel>
                                    <Button Content="Huỷ hành khách"
                                            Command="{Binding DataContext.CancelPassengerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Visibility="{Binding CanCancel, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Background="Red" Foreground="White"
                                            Margin="10,0,0,0" Padding="10,5"
                                            HorizontalAlignment="Right"/>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>

            <!-- Tổng tiền -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                <TextBlock Text="{Binding TotalPriceInfo}" FontSize="14" FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Nút -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Quay lại"
                        Command="{Binding GoBackCommand}"
                        Padding="10,5" Margin="0,0,10,0"/>
                <Button Content="Huỷ toàn bộ vé"
                        Command="{Binding CancelEntireBookingCommand}"
                        Background="Red" Foreground="White"
                        Padding="10,5"
                        Visibility="{Binding CanCancelAll, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
