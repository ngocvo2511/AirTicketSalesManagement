<UserControl x:Class="AirTicketSalesManagement.View.Staff.StaffFlightInputInformations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:AirTicketSalesManagement.View.Staff"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="217" d:DesignWidth="980">
    <Grid>
        <Border Background="#F5F7FA" CornerRadius="10" Padding="20" Margin="0 0 0 20">
            <StackPanel>
                <TextBlock Text="Thông tin khách hàng" 
                   FontSize="16" 
                   FontWeight="SemiBold" 
                   Margin="0 0 0 10"/>
                <UniformGrid Columns="2" Rows="2" Margin="10">
                    <TextBox materialDesign:HintAssist.Hint="Họ và tên"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Width="250" Margin="0 0 20 20"/>
                    <TextBox materialDesign:HintAssist.Hint="Số điện thoại"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Width="250" Margin="0 0 20 20"/>
                    <TextBox materialDesign:HintAssist.Hint="Email"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Width="250" Margin="0 0 20 20"/>
                    <DatePicker materialDesign:HintAssist.Hint="Ngày sinh"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                        Width="250" Margin="0 0 20 20"/>
                </UniformGrid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
