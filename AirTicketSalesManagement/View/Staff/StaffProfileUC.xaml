<UserControl x:Class="AirTicketSalesManagement.View.Staff.StaffProfileUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:AirTicketSalesManagement.View.Staff"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="980">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0 10 0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Hồ sơ nhân viên" 
               FontSize="30" FontWeight="Bold"
               Margin="30 0 0 0"
               Foreground="#2C3E50"
               VerticalAlignment="Center" />

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <ToggleButton Template="{StaticResource ProfilePopupTemplate}" 
                      Width="60"
                      Height="60"
                      Margin="0 0 40 0"/>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <Border Grid.Row="1" Background="#F5F7FA" CornerRadius="10" Padding="20" Margin="0 0 0 20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 20">
                    <!-- Avatar -->
                    <Border Width="100" Height="100" Background="#D9D9D9" CornerRadius="50">
                        <TextBlock Text="Avatar" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               FontSize="12"
                               Foreground="Gray"/>
                    </Border>

                    <!-- Position -->
                    <StackPanel Margin="50 0 0 10" VerticalAlignment="Bottom"
                            Orientation="Horizontal">
                        <TextBlock Text="Vị trí: " FontWeight="SemiBold" FontSize="24"/>
                        <TextBlock Text="{Binding Position}" FontSize="16" FontWeight="Bold" Foreground="#0078D7"/>
                    </StackPanel>
                </StackPanel>

                <!-- Hàng 2: Thông tin nhân viên -->
                <Border BorderBrush="#388FF4"
                        BorderThickness="2"
                        CornerRadius="8"
                        Padding="10"
                        Grid.Row="2"
                        Background="White"
                        Margin="0 10 0 0">

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <UniformGrid Columns="2" Rows="7" Margin="10" HorizontalAlignment="Stretch">
                            <!-- Ô 1 -->
                            <Border BorderBrush="#388FF4" BorderThickness="1" Padding="10">
                                <TextBlock Text="Mã nhân viên:" FontWeight="Bold" FontSize="20"/>
                            </Border>
                            <Border BorderBrush="#388FF4" BorderThickness="1" Padding="10">
                                <TextBlock Text="{Binding MaNv}" FontSize="20"/>
                            </Border>

                            <!-- Ô 2 -->
                            <Border BorderBrush="#388FF4" BorderThickness="1" Padding="10">
                                <TextBlock Text="Họ tên:" FontWeight="Bold" FontSize="20"/>
                            </Border>
                            <Border BorderBrush="#388FF4" BorderThickness="1" Padding="10">
                                <TextBlock Text="{Binding HoTen}" FontSize="20"/>
                            </Border>

                            <!-- Ô 3 -->
                            <Border BorderBrush="#388FF4" BorderThickness="1" Padding="10">
                                <TextBlock Text="Giới tính:" FontWeight="Bold" FontSize="20"/>
                            </Border>
                            <Border BorderBrush="#388FF4" BorderThickness="1" Padding="10">
                                <TextBlock Text="{Binding GioiTinh}" FontSize="20"/>
                            </Border>

                            <!-- Ô 4 -->
                            <Border BorderBrush="#388FF4" BorderThickness="1" Padding="10">
                                <TextBlock Text="Ngày sinh:" FontWeight="Bold" FontSize="20"/>
                            </Border>
                            <Border BorderBrush="#388FF4" BorderThickness="1" Padding="10">
                                <TextBlock Text="{Binding NgaySinh}" FontSize="20"/>
                            </Border>

                            <!-- Ô 5 -->
                            <Border BorderBrush="#388FF4" BorderThickness="1" Padding="10">
                                <TextBlock Text="Số điện thoại:" FontWeight="Bold" FontSize="20"/>
                            </Border>
                            <Border BorderBrush="#388FF4" BorderThickness="1" Padding="10">
                                <TextBlock Text="{Binding SoDienThoai}" FontSize="20"/>
                            </Border>

                            <!-- Ô 6 -->
                            <Border BorderBrush="#388FF4" BorderThickness="1" Padding="10">
                                <TextBlock Text="Email:" FontWeight="Bold" FontSize="20"/>
                            </Border>
                            <Border BorderBrush="#388FF4" BorderThickness="1" Padding="10">
                                <TextBlock Text="{Binding Email}" FontSize="20"/>
                            </Border>

                            <!-- Ô 7 -->
                            <Border BorderBrush="#388FF4" BorderThickness="1" Padding="10">
                                <TextBlock Text="CCCD:" FontWeight="Bold" FontSize="20"/>
                            </Border>
                            <Border BorderBrush="#388FF4" BorderThickness="1" Padding="10">
                                <TextBlock Text="{Binding Cccd}" FontSize="20"/>
                            </Border>
                        </UniformGrid>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
