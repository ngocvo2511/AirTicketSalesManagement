<UserControl x:Class="AirTicketSalesManagement.View.Staff.StaffProfileUC"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                 xmlns:local="clr-namespace:AirTicketSalesManagement.View.Staff"
                 mc:Ignorable="d" 
                 d:DesignHeight="650" d:DesignWidth="980">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0 10 0 10">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#388FF4" Offset="0"/>
                    <GradientStop Color="#E8F4FD" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Border Height="80">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Hồ sơ nhân viên" 
                                   FontSize="30" FontWeight="Bold"
                                   Margin="30 0 0 0"
                                   Foreground="#2C3E50"
                                   VerticalAlignment="Center" />
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Padding="0"
                                    Margin="0 0 25 0"
                                    ToolTip="Chỉnh sửa thông tin">
                            <Icon:PackIconMaterial Kind="SquareEditOutline" Width="24" Height="24" Foreground="#1976D2"/>
                        </Button>
                        <ToggleButton Template="{StaticResource ProfilePopupTemplate}" 
                                          Width="60"
                                          Height="60"
                                          Margin="0 0 40 0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="30 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column - Profile Card -->
            <Border Grid.Column="0" Width="280" 
                        Background="White" 
                        CornerRadius="15" 
                        Padding="0"
                        Margin="0 0 20 20"
                        BorderBrush="#E2E8F0"
                        BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                          Opacity="0.08" 
                                          ShadowDepth="2" 
                                          BlurRadius="8" 
                                          Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="160"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Cover Image -->
                    <Border Grid.Row="0" Background="#5371FF" CornerRadius="15 15 0 0">
                        <Grid>
                            <TextBlock Text="FlyTogether" 
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Top"
                                           Margin="0 15 15 0"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                        </Grid>
                    </Border>

                    <!-- Avatar -->
                    <Border Grid.Row="0" Grid.RowSpan="2"
                                Width="120" Height="120"
                                Background="White"
                                CornerRadius="60"
                                BorderThickness="4"
                                BorderBrush="White"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center"
                                Margin="0 0 0 40">
                        <Border CornerRadius="60" ClipToBounds="True">
                            <Grid>
                                <!--<Image Source="/Resources/Images/avatar.png"
                                           Stretch="UniformToFill"/>-->
                                <TextBlock Text="NV" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="#5371FF"/>
                            </Grid>
                        </Border>
                    </Border>

                    <!-- Name and Title -->
                    <StackPanel Grid.Row="1" Margin="0 45 0 0" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding HoTen}" 
                                       FontSize="22" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"/>
                        <Border Background="#E3F2FD" 
                                    CornerRadius="12" 
                                    Padding="12 5" 
                                    Margin="0 5 0 0">
                            <TextBlock Text="{Binding Position}" 
                                           Foreground="#1976D2" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <!-- Contact Information -->
                    <StackPanel Grid.Row="2" Margin="20 20">
                        <Separator Margin="0 0 0 15"/>

                        <!-- Email -->
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 12">
                            <Border Width="36" Height="36" Background="#E3F2FD" CornerRadius="18">
                                <Icon:PackIconMaterial Kind="EmailOutline" 
                                                        Width="18" Height="18" 
                                                        HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"
                                                        Foreground="#1976D2"/>
                            </Border>
                            <StackPanel Margin="12 0 0 0">
                                <TextBlock Text="Email" FontSize="12" Foreground="#94A3B8"/>
                                <TextBlock Text="{Binding Email}" FontSize="14" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Phone -->
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 12">
                            <Border Width="36" Height="36" Background="#E8F5E9" CornerRadius="18">
                                <Icon:PackIconMaterial Kind="PhoneOutline" 
                                                        Width="18" Height="18" 
                                                        HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"
                                                        Foreground="#2E7D32"/>
                            </Border>
                            <StackPanel Margin="12 0 0 0">
                                <TextBlock Text="Số điện thoại" FontSize="12" Foreground="#94A3B8"/>
                                <TextBlock Text="{Binding SoDienThoai}" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- ID -->
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 12">
                            <Border Width="36" Height="36" Background="#FFF3E0" CornerRadius="18">
                                <Icon:PackIconMaterial Kind="CardAccountDetailsOutline" 
                                                        Width="18" Height="18" 
                                                        HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"
                                                        Foreground="#EF6C00"/>
                            </Border>
                            <StackPanel Margin="12 0 0 0">
                                <TextBlock Text="Mã nhân viên" FontSize="12" Foreground="#94A3B8"/>
                                <TextBlock Text="{Binding MaNv}" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Column - Detail Information -->
            <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="15"
                        Padding="25"
                        Margin="0 0 0 20"
                        BorderBrush="#E2E8F0"
                        BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                          Opacity="0.08" 
                                          ShadowDepth="2" 
                                          BlurRadius="8" 
                                          Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Section Title -->
                    <TextBlock Grid.Row="0" 
                                   Text="Thông tin cá nhân" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 20"/>

                    <!-- Information Cards -->
                    <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                        <Grid Margin="0 0 10 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Họ và tên -->
                            <Border Grid.Row="0" Grid.Column="0"
                                        Background="#F8FAFC"
                                        CornerRadius="12"
                                        Padding="15"
                                        Margin="0 0 10 15"
                                        BorderBrush="#E2E8F0"
                                        BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Họ và tên"
                                                   Grid.Row="0"
                                                   FontSize="14"
                                                   Foreground="#64748B"/>

                                    <TextBlock Text="{Binding HoTen}"
                                                   Grid.Row="1"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Margin="0 8 0 0"/>
                                </Grid>
                            </Border>

                            <!-- Giới tính -->
                            <Border Grid.Row="0" Grid.Column="1"
                                        Background="#F8FAFC"
                                        CornerRadius="12"
                                        Padding="15"
                                        Margin="10 0 0 15"
                                        BorderBrush="#E2E8F0"
                                        BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Giới tính"
                                                   Grid.Row="0"
                                                   FontSize="14"
                                                   Foreground="#64748B"/>

                                    <TextBlock Text="{Binding GioiTinh}"
                                                   Grid.Row="1"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Margin="0 8 0 0"/>
                                </Grid>
                            </Border>

                            <!-- Ngày sinh -->
                            <Border Grid.Row="1" Grid.Column="0"
                                        Background="#F8FAFC"
                                        CornerRadius="12"
                                        Padding="15"
                                        Margin="0 0 10 15"
                                        BorderBrush="#E2E8F0"
                                        BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Ngày sinh"
                                                   Grid.Row="0"
                                                   FontSize="14"
                                                   Foreground="#64748B"/>

                                    <TextBlock Text="{Binding NgaySinh}"
                                                   Grid.Row="1"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Margin="0 8 0 0"/>
                                </Grid>
                            </Border>

                            <!-- CCCD -->
                            <Border Grid.Row="1" Grid.Column="1"
                                        Background="#F8FAFC"
                                        CornerRadius="12"
                                        Padding="15"
                                        Margin="10 0 0 15"
                                        BorderBrush="#E2E8F0"
                                        BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="CCCD/CMND"
                                                   Grid.Row="0"
                                                   FontSize="14"
                                                   Foreground="#64748B"/>

                                    <TextBlock Text="{Binding Cccd}"
                                                   Grid.Row="1"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Margin="0 8 0 0"/>
                                </Grid>
                            </Border>

                            <!-- Ngày vào làm -->
                            <Border Grid.Row="2" Grid.Column="0"
                                        Background="#F8FAFC"
                                        CornerRadius="12"
                                        Padding="15"
                                        Margin="0 0 10 15"
                                        BorderBrush="#E2E8F0"
                                        BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Ngày vào làm"
                                                   Grid.Row="0"
                                                   FontSize="14"
                                                   Foreground="#64748B"/>

                                    <TextBlock Text="{Binding NgayVaoLam, FallbackValue='01/01/2023'}"
                                                   Grid.Row="1"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   Margin="0 8 0 0"/>
                                </Grid>
                            </Border>

                            <!-- Trạng thái làm việc -->
                            <Border Grid.Row="2" Grid.Column="1"
                                        Background="#F8FAFC"
                                        CornerRadius="12"
                                        Padding="15"
                                        Margin="10 0 0 15"
                                        BorderBrush="#E2E8F0"
                                        BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Trạng thái"
                                                   Grid.Row="0"
                                                   FontSize="14"
                                                   Foreground="#64748B"/>

                                    <Border Grid.Row="1"
                                                Background="#DCFCE7"
                                                CornerRadius="4"
                                                Padding="8 4"
                                                HorizontalAlignment="Left"
                                                Margin="0 8 0 0">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="8" Height="8" Fill="#16A34A" Margin="0 0 6 0" VerticalAlignment="Center"/>
                                            <TextBlock Text="Đang làm việc" 
                                                           FontSize="14" 
                                                           FontWeight="Medium" 
                                                           Foreground="#16A34A"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Địa chỉ -->
                            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                        Background="#F8FAFC"
                                        CornerRadius="12"
                                        Padding="15"
                                        Margin="0 0 0 15"
                                        BorderBrush="#E2E8F0"
                                        BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Địa chỉ"
                                                   Grid.Row="0"
                                                   FontSize="14"
                                                   Foreground="#64748B"/>

                                    <TextBlock Text="{Binding DiaChi, FallbackValue='123 Đường ABC, Phường XYZ, Quận 1, TP.HCM'}"
                                                   Grid.Row="1"
                                                   FontSize="16"
                                                   FontWeight="Medium"
                                                   TextWrapping="Wrap"
                                                   Margin="0 8 0 0"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>