<UserControl x:Class="AirTicketSalesManagement.View.Staff.Staff_TicketManagementDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirTicketSalesManagement.View.Staff"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <!-- Header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0"
             Orientation="Horizontal"
             VerticalAlignment="Center" Margin="20,20,0,0">
                        <Icon:PackIconMaterial Kind="Ticket"
                                 Width="32"
                                 Height="32"
                                 VerticalAlignment="Stretch"
                                 Margin="0,0,8,0"
                                 Foreground="#6366F1"/>
                        <TextBlock Text="Chi tiết đặt vé"
             Style="{StaticResource HeaderTextStyle}"/>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Flight Information Card -->
                <materialDesign:Card UniformCornerRadius="15" 
                               Background="White"
                               Margin="0,0,0,20"
                               materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Main Content -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Flight Route -->
                            <Border Grid.Column="0" 
                                Background="#F8F9FA" 
                                CornerRadius="10" 
                                Padding="15" 
                                MinWidth="180">
                                <StackPanel>
                                    <TextBlock Text="{Binding ChiTietVe.MaDiemDi}" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         HorizontalAlignment="Center"/>
                                    <Border Width="40" 
                                        Height="40" 
                                        Background="Transparent" 
                                        Margin="0,8">
                                        <materialDesign:PackIcon Kind="AirplaneTakeoff" 
                                                           Width="30" 
                                                           Height="30" 
                                                           Foreground="#6366F1"/>
                                    </Border>
                                    <TextBlock Text="{Binding ChiTietVe.MaDiemDen}" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Flight Details -->
                            <StackPanel Grid.Column="1" Margin="20,0">
                                <TextBlock Text="{Binding ChiTietVe.HangHangKhong}" 
                           FontSize="28" 
                           FontWeight="SemiBold" 
                           Foreground="#6366F1"/>

                                <Grid Margin="0,10,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="{Binding ChiTietVe.GioDi, 
                                 StringFormat='🕒 Giờ đi: {0:HH:mm dd/MM/yyyy}'}"
                                 FontSize="18" 
                                 Foreground="#374151"/>
                                    <TextBlock Grid.Row="1" 
                                 Text="{Binding ChiTietVe.GioDen, 
                                 StringFormat='🕒 Giờ đến: {0:HH:mm dd/MM/yyyy}'}"
                                 FontSize="18" 
                                 Foreground="#374151"/>
                                    <TextBlock Grid.Row="2" 
                                     FontSize="18" 
                                     Foreground="#374151">
                                <Run Text="🛩 Loại máy bay: "/>
                                <Run Text="{Binding ChiTietVe.LoaiMayBay}"/>
                                    </TextBlock>
                                </Grid>

                                <!-- Passenger Count -->
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <materialDesign:PackIcon Kind="AccountMultiple" 
                                Margin="0,0,10,0" 
                                Foreground="#6B7280"/>
                                    <TextBlock FontSize="18" Foreground="#374151">
                                <Run Text="Số lượng khách: "/>
                                <Run Text="{Binding ChiTietVe.SoLuongKhach}"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>

                        </Grid>

                        <!-- Status and Booking Date -->
                        <Grid Grid.Row="1" Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding ChiTietVe.NgayDat, 
                                 StringFormat='Ngày đặt: {0:dd/MM/yyyy}'}"
                                 FontSize="13" 
                                 Foreground="#6B7280"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Tình trạng: " 
                                     FontSize="14" 
                                     FontWeight="Medium" 
                                     Foreground="#374151"/>
                                <TextBlock Text="{Binding ChiTietVe.TrangThai}" 
                                     FontSize="14" 
                                     FontWeight="SemiBold" 
                                     Margin="4,0,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ChiTietVe.TrangThai}" Value="Đã hủy">
                                                    <Setter Property="Foreground" Value="#DC2626"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ChiTietVe.TrangThai}" Value="Đã thanh toán">
                                                    <Setter Property="Foreground" Value="#059669"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ChiTietVe.TrangThai}" Value="Chờ thanh toán">
                                                    <Setter Property="Foreground" Value="#2563EB"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </materialDesign:Card>

                <!-- Passenger List -->
                <materialDesign:Card UniformCornerRadius="15" 
                               Background="White"
                               materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel Margin="20">
                        <TextBlock Text="Danh sách hành khách" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Margin="0,0,0,15"
                             Foreground="#6366F1"/>

                        <ItemsControl ItemsSource="{Binding CtdvList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Card Margin="0,0,0,10" 
                                                   UniformCornerRadius="8">
                                        <Grid Margin="15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="{Binding HoTenHk}" 
                                                     FontSize="20" 
                                                     FontWeight="Bold" 
                                                     Foreground="#6366F1"
                                                     Margin="0,0,0,10"/>

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="140"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Giới tính -->
                                                    <TextBlock Text="Giới tính:" 
                                                         FontWeight="Medium" 
                                                         Foreground="#374151"/>
                                                    <TextBlock Text="{Binding GioiTinh}" 
                                                         Grid.Column="1" 
                                                         Foreground="#6B7280"/>

                                                    <!-- Ngày sinh -->
                                                    <TextBlock Text="Ngày sinh:" 
                                                         Grid.Row="1"
                                                         FontWeight="Medium" 
                                                         Foreground="#374151"/>
                                                    <TextBlock Text="{Binding NgaySinh, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                                         Grid.Row="1" 
                                                         Grid.Column="1"
                                                         Foreground="#6B7280"/>

                                                    <!-- CCCD -->
                                                    <TextBlock Text="CCCD:" 
                                                         Grid.Row="2"
                                                         FontWeight="Medium" 
                                                         Foreground="#374151"
                                                         Visibility="{Binding Cccd, 
                                                         Converter={StaticResource NonNullToVisibilityConverter}}"/>
                                                    <TextBlock Text="{Binding Cccd}" 
                                                         Grid.Row="2" 
                                                         Grid.Column="1"
                                                         Foreground="#6B7280"/>

                                                    <!-- Người giám hộ -->
                                                    <TextBlock Text="Người giám hộ:" 
                                                         Grid.Row="3"
                                                         FontWeight="Medium" 
                                                         Foreground="#374151"
                                                         Visibility="{Binding HoTenNguoiGiamHo, 
                                                         Converter={StaticResource NonNullToVisibilityConverter}}"/>
                                                    <TextBlock Text="{Binding HoTenNguoiGiamHo}" 
                                                         Grid.Row="3" 
                                                         Grid.Column="1"
                                                         Foreground="#6B7280"/>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                    </materialDesign:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" 
    HorizontalAlignment="Center" 
    Margin="0,20,0,0">
                            <!-- Back Button -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
        Command="{Binding GoBackCommand}"
        Background="#EEF2FF"
        Foreground="#6366F1"
        Margin="0,0,5,0"
        materialDesign:ButtonAssist.CornerRadius="8">
                                <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                                    <materialDesign:PackIcon Kind="ArrowLeft"/>
                                    <TextBlock Text="Quay lại"/>
                                </StackPanel>
                            </Button>

                            <!-- Cancel Button -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding CancelTicketCommand}"
                            Background="#FEE2E2"
                            Foreground="#DC2626"
                            Margin="0,0,8,0"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Visibility="{Binding ChiTietVe.CanCancel, 
                                      Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                                    <materialDesign:PackIcon Kind="Cancel"/>
                                    <TextBlock Text="Huỷ vé"/>
                                </StackPanel>
                            </Button>

                            <!-- Confirm Payment Button -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding ConfirmPaymentCommand}"
                            Background="#D1FAE5"
                            Foreground="#059669"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Margin="0,0,0,0"
                            Visibility="{Binding ChiTietVe.TrangThai, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Chờ thanh toán'}">
                                <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                                    <materialDesign:PackIcon Kind="CreditCardCheckOutline"/>
                                    <TextBlock Text="Xác nhận thanh toán"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
