<UserControl x:Class="AirTicketSalesManagement.View.Staff.StaffFlightMakesPaymentMethods"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="260" d:DesignWidth="980">
    <Grid>
        <Border Background="#F5F7FA" CornerRadius="10" Padding="20" Margin="0 0 0 20">
            <StackPanel>
                <TextBlock Text="Phương thức thanh toán" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0 0 0 10"/>

                <UniformGrid Columns="2" Rows="3" Margin="10">
                    <!-- Chọn phương thức -->
                    <ComboBox materialDesign:HintAssist.Hint="Chọn phương thức"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Width="250" Margin="0 0 20 20"
                              ItemsSource="{Binding AvailablePaymentMethods}"
                              SelectedItem="{Binding SelectedPaymentMethod, Mode=TwoWay}"/>

                    <!-- Số thẻ -->
                    <TextBox materialDesign:HintAssist.Hint="Số thẻ"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Width="250" Margin="0 0 20 20"
                             Text="{Binding CardNumber, Mode=TwoWay}"/>

                    <!-- Tên chủ thẻ -->
                    <TextBox materialDesign:HintAssist.Hint="Tên chủ thẻ"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Width="250" Margin="0 0 20 20"
                             Text="{Binding CardHolderName, Mode=TwoWay}"/>

                    <!-- Ngày hết hạn -->
                    <TextBox materialDesign:HintAssist.Hint="Ngày hết hạn (MM/YY)"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Width="250" Margin="0 0 20 20"
                             Text="{Binding ExpiryDate, Mode=TwoWay}"/>

                    <!-- CVV -->
                    <TextBox materialDesign:HintAssist.Hint="CVV"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Width="250" Margin="0 0 20 20"
                             Text="{Binding CVV, Mode=TwoWay}"/>
                </UniformGrid>

                <!-- Nút xác nhận -->
                <Button Content="Xác nhận thanh toán"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#388FF4" Foreground="White"
                        Width="200" Height="36"
                        HorizontalAlignment="Left"
                        Command="{Binding ConfirmPaymentCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
