<UserControl x:Class="AirTicketSalesManagement.View.Login.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirTicketSalesManagement.View.Login"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="540"
             >
    <UserControl.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#0099cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#007A9E"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CustomTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,0,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#0099cc"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CustomPasswordBoxStyle" TargetType="{x:Type PasswordBox}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,0,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#0099cc"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CustomLabelStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Margin" Value="0,12,0,5"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </UserControl.Resources>

    <Border Background="White" Padding="50,20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Phần đầu -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Tạo tài khoản mới" 
                           FontSize="28" 
                           FontWeight="SemiBold" 
                           Foreground="#333333" 
                           HorizontalAlignment="Center"
                           Margin="0,20,0,10"/>
                <TextBlock Text="Nhanh chóng và dễ dàng" 
                           FontSize="14" 
                           Foreground="#777777" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
            </StackPanel>

            <!-- Phần form đăng ký -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Họ Tên:" Style="{StaticResource CustomLabelStyle}"/>
                <TextBox x:Name="txtFullName" 
                         Style="{StaticResource CustomTextBoxStyle}"
                         Margin="0,0,0,12"/>

                <TextBlock Text="Email:" Style="{StaticResource CustomLabelStyle}"/>
                <TextBox x:Name="txtEmail" 
                         Style="{StaticResource CustomTextBoxStyle}"
                         Margin="0,0,0,12"/>

                <TextBlock Text="Mật khẩu:" Style="{StaticResource CustomLabelStyle}"/>
                <PasswordBox x:Name="txtPassword" 
                            Style="{StaticResource CustomPasswordBoxStyle}" 
                            Margin="0,0,0,12"/>

                <TextBlock Text="Nhập lại mật khẩu:" Style="{StaticResource CustomLabelStyle}"/>
                <PasswordBox x:Name="txtConfirmPassword" 
                            Style="{StaticResource CustomPasswordBoxStyle}" 
                            Margin="0,0,0,25"/>

                <Button x:Name="btnSignUp" 
                        Content="ĐĂNG KÝ" 
                        Style="{StaticResource RoundedButtonStyle}"
                        Margin="0,10,0,20"
                        Command="{Binding RegisterCommand}"/>
            </StackPanel>

            <!-- Phần footer -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock HorizontalAlignment="Center">
                    <Run Text="Đã có tài khoản? " Foreground="#777777"/>
                    <Hyperlink x:Name="lnkLogin" 
                             TextDecorations="None" 
                             Foreground="#0099cc" 
                             Command="{Binding ShowLoginCommand}">
                        <TextBlock Text="Đăng nhập" FontWeight="SemiBold"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
