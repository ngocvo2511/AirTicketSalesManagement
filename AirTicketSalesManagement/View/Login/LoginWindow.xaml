<Window x:Class="AirTicketSalesManagement.View.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="White">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="480" />
			<ColumnDefinition Width="640" />
		</Grid.ColumnDefinitions>

		<!-- Left Panel -->
		<Grid Grid.Column="0">
			<Grid.Background>
				<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
					<GradientStop Color="#E0F7FA" Offset="0.0"/>
					<GradientStop Color="#B2EBF2" Offset="0.5"/>
					<GradientStop Color="#80DEEA" Offset="1.0"/>
				</LinearGradientBrush>
			</Grid.Background>

			<!-- Tab Control -->
			<TabControl x:Name="TabControl">
				<!-- Tab Login -->
				<TabItem Header="Đăng nhập">
					<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="280">
						<TextBlock Text="Đăng nhập" FontSize="26" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0 0 0 30"
                                   Foreground="#2C3E50" />

						<!-- Username -->
						<TextBlock Text="Tên đăng nhập" Margin="0 0 0 5" Foreground="#34495E"/>
						<TextBox Margin="0 0 0 15" Height="35" Padding="8"
                                 Background="White" BorderThickness="1"
                                 BorderBrush="#0078D7"/>

						<!-- Password -->
						<TextBlock Text="Mật khẩu" Margin="0 0 0 5" Foreground="#34495E"/>
						<PasswordBox Margin="0 0 0 10" Height="35" Padding="8"
                                     Background="White" BorderThickness="1"
                                     BorderBrush="#0078D7"/>

						<!-- Options -->
						<Grid Margin="0 0 0 20">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>

							<!-- Remember Me -->
							<CheckBox Content="Lưu tài khoản" VerticalAlignment="Center"
                                      Foreground="#2C3E50"/>

							<!-- Forgot Password -->
							<TextBlock Grid.Column="1"
                                       Text="Quên mật khẩu?"
                                       Foreground="#0078D7"
                                       Cursor="Hand"
                                       VerticalAlignment="Center"
                                       Margin="10 0 0 0"
                                       TextDecorations="Underline"
                                       FontSize="12"/>
						</Grid>

						<!-- Login Button -->
						<Button Content="Đăng nhập"
                                Width="200" Height="40"
                                Background="#0078D7"
                                Foreground="White"
                                FontWeight="Bold"
                                HorizontalAlignment="Center"
                                Cursor="Hand"
                                BorderBrush="Transparent"/>
					</StackPanel>
				</TabItem>

				<!-- Tab Register -->
				<TabItem Header="Đăng ký">
					<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
						<TextBlock Text="Đăng ký tài khoản" FontSize="24" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0 0 0 30" Foreground="#333" />

						<!-- Username -->
						<TextBlock Text="Tên đăng nhập" Margin="0 0 0 5" Foreground="#555" />
						<TextBox x:Name="UsernameTextBox" Margin="0 0 0 15" Height="35" Padding="8"
                                 Background="White" BorderBrush="#0078D7" />

						<!-- Password -->
						<TextBlock Text="Mật khẩu" Margin="0 0 0 5" Foreground="#555" />
						<PasswordBox x:Name="PasswordBox" Margin="0 0 0 15" Height="35" Padding="8"
                                     Background="White" BorderBrush="#0078D7" />

						<!-- Confirm Password -->
						<TextBlock Text="Xác nhận mật khẩu" Margin="0 0 0 5" Foreground="#555" />
						<PasswordBox x:Name="ConfirmPasswordBox" Margin="0 0 0 15" Height="35" Padding="8"
                                     Background="White" BorderBrush="#0078D7" />

						<!-- Email -->
						<TextBlock Text="Email" Margin="0 0 0 5" Foreground="#555" />
						<TextBox x:Name="EmailTextBox" Margin="0 0 0 15" Height="35" Padding="8"
                                 Background="White" BorderBrush="#0078D7" />

						<!-- Phone Number -->
						<TextBlock Text="Số điện thoại" Margin="0 0 0 5" Foreground="#555" />
						<Grid Margin="0 0 0 15" HorizontalAlignment="Stretch">
							<!-- ComboBox for Country Code with Scrollable List -->
							<ComboBox x:Name="CountryCodeComboBox" Width="100" VerticalAlignment="Center"
                                      HorizontalAlignment="Left" Margin="0 0 10 0"
                                      Background="White" BorderBrush="#0078D7"
                                      IsEditable="True" MaxDropDownHeight="150">
								<ComboBoxItem Content="🇻🇳 Việt Nam (+84)" IsSelected="True" />
								<ComboBoxItem Content="🇺🇸 Hoa Kỳ (+1)" />
								<ComboBoxItem Content="🇬🇧 Anh (+44)" />
								<ComboBoxItem Content="🇯🇵 Nhật Bản (+81)" />
								<ComboBoxItem Content="🇮🇳 Ấn Độ (+91)" />
								<ComboBoxItem Content="🇰🇷 Hàn Quốc (+82)" />
								<ComboBoxItem Content="🇨🇦 Canada (+1)" />
								<ComboBoxItem Content="🇩🇪 Đức (+49)" />
								<ComboBoxItem Content="🇫🇷 Pháp (+33)" />
								<ComboBoxItem Content="🇨🇳 Trung Quốc (+86)" />
								<ComboBoxItem Content="🇹🇭 Thái Lan (+66)" />
								<ComboBoxItem Content="🇦🇺 Úc (+61)" />
								<ComboBoxItem Content="🇷🇺 Nga (+7)" />
								<ComboBoxItem Content="🇧🇷 Brazil (+55)" />
							</ComboBox>

							<!-- TextBox for Phone Number -->
							<TextBox x:Name="PhoneNumberTextBox" Height="35" Padding="8"
                                     Background="White" BorderBrush="#0078D7"
                                     HorizontalAlignment="Stretch" Margin="110 0 0 0" />
						</Grid>

						<!-- Register Button -->
						<Button Content="Đăng ký" Width="200" Height="40"
                                Background="#0078D7" Foreground="White" FontWeight="Bold"
                                HorizontalAlignment="Center" Cursor="Hand" BorderBrush="Transparent"/>
					</StackPanel>
				</TabItem>

				<!-- Tab Forgot Password -->
				<TabItem Header="Quên mật khẩu">
					<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
						<TextBlock Text="Quên mật khẩu" FontSize="20" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0 0 0 20" Foreground="#333" />

						<TextBlock Text="Nhập email hoặc số điện thoại" Margin="0 0 0 5" Foreground="#555" />
						<TextBox Margin="0 0 0 15" Height="35" Padding="8" Background="White" BorderBrush="#0078D7" />

						<Button Content="Gửi yêu cầu"
                                Width="200" Height="40" Background="#0078D7" Foreground="White" FontWeight="Bold"
                                BorderBrush="Transparent" HorizontalAlignment="Center" Cursor="Hand"/>
					</StackPanel>
				</TabItem>
			</TabControl>
		</Grid>

		<!-- Right Panel with Blurred Image -->
		<Border CornerRadius="20"
                BorderThickness="0.1"
                BorderBrush="Transparent"
                HorizontalAlignment="Left"
			Width="400" 
			Grid.Column="1"
			Height="400" 
			VerticalAlignment="Center" Margin="50 0 0 0"> 
			<Border.Background>
				<ImageBrush ImageSource="/Resources/Images/logoxoanen.png" Stretch="Uniform"/>
			</Border.Background>
			<Border.Effect>
				<BlurEffect Radius="2"/>
			</Border.Effect>
		</Border>
	</Grid>
</Window>
