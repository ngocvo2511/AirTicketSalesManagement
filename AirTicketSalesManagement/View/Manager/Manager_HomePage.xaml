<UserControl x:Class="AirTicketSalesManagement.View.Manager.Manager_HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:AirTicketSalesManagement.View.Manager"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="980">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Trang chủ" 
                       FontSize="30" FontWeight="Bold"
                       Margin="30 0 0 0"
                       Foreground="#2C3E50"
                       VerticalAlignment="Center" />

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <ToggleButton Template="{StaticResource ProfilePopupTemplate}" 
                              Width="60"
                              Height="60"
                              Margin="0 0 40 0"/>
                </StackPanel>
            </Grid>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Thông tin -->
                <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                    <Border Width="60" Height="60" CornerRadius="8" Background="#E0E0E0" Margin="0 0 20 0" ClipToBounds="True">
                        <Image Source="/Resources/Images/manager.png"
                               Stretch="UniformToFill"
                               Width="60" Height="60" />
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Nguyễn Văn A" FontSize="22" FontWeight="Bold" />
                        <TextBlock Text="Chức vụ: Quản lý hệ thống" Foreground="Gray" FontSize="14"/>
                    </StackPanel>
                </StackPanel>



                <UniformGrid Grid.Row="1" Columns="3" Margin="0 0 0 20" HorizontalAlignment="Stretch">
                    <Border Background="#E8F5E9" CornerRadius="10" Padding="15" Margin="5">
                        <StackPanel HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="CashMultiple" Width="24" Height="24" Foreground="#388E3C" Margin="0 0 10 0"/>
                            <TextBlock Text="500 triệu" FontSize="28" FontWeight="Bold" Foreground="#388E3C"/>
                            <TextBlock Text="Doanh thu hôm nay" FontSize="14" Foreground="Black"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#FFFDE7" CornerRadius="10" Padding="15" Margin="5">
                        <StackPanel HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="CalendarWeek" Width="24" Height="24" Foreground="#FBC02D" Margin="0 0 10 0"/>
                            <TextBlock Text="1.320 vé" FontSize="28" FontWeight="Bold" Foreground="#FBC02D"/>
                            <TextBlock Text="Vé bán trong tuần" FontSize="14" Foreground="Black"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#FBE9E7" CornerRadius="10" Padding="15" Margin="5">
                        <StackPanel HorizontalAlignment="Center">
                            <Icon:PackIconMaterial Kind="ChartLineVariant" Width="24" Height="24" Foreground="#D84315" Margin="0 0 10 0"/>
                            <TextBlock Text="+15%" FontSize="28" FontWeight="Bold" Foreground="#D84315"/>
                            <TextBlock Text="Tăng trưởng tuần này" FontSize="14" Foreground="Black"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>



                <!-- Biểu đồ -->
                <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="10" BorderBrush="#DDD" BorderThickness="1">
                    <lvc:CartesianChart>
                        <lvc:CartesianChart.Series>
                            <lvc:LineSeries Title="Doanh thu" Values="10, 50, 70, 30, 90, 120, 100" PointGeometrySize="10"/>
                        </lvc:CartesianChart.Series>

                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Ngày" Labels="Thứ 2,Thứ 3,Thứ 4,Thứ 5,Thứ 6,Thứ 7,CN" />
                        </lvc:CartesianChart.AxisX>

                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Doanh thu (triệu VND)" />
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Border>
            </Grid>


        </Grid>
    </Grid>
</UserControl>
