<UserControl x:Class="AirTicketSalesManagement.View.Manager.Manager_CustomerManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:uc ="clr-namespace:AirTicketSalesManagement.View.Customer"
             xmlns:local="clr-namespace:AirTicketSalesManagement.View.Staff"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="980">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0 10 0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Quản lý thông tin khách hàng" 
                   FontSize="30" FontWeight="Bold"
                   Margin="30 0 0 0"
                   Foreground="#2C3E50"
                   VerticalAlignment="Center" />

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <ToggleButton Template="{StaticResource ProfilePopupTemplate}" 
                          Width="60"
                          Height="60"
                          Margin="0 0 40 0"/>
            </StackPanel>
        </Grid>
        <!-- Top Bar -->
        <Grid Grid.Row="1" Margin="20 0 20 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBox x:Name="SearchTextBox" Width="300" Height="35"
                 Margin="0 0 10 0"
                 materialDesign:HintAssist.Hint="Tra cứu thông tin khách hàng" />
                <Button Width="40" Height="35" Background="#3498DB"
                Foreground="White" Padding="5">
                    <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20"/>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                        Grid.Column="1" Margin="10">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="Edit Mode"
                               VerticalAlignment="Center"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="Black"
                               Margin="0,0,5,0" />
                    <ToggleButton x:Name="EditModeToggle"
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                    ToolTip="Chế độ chỉnh sửa"
                                    IsChecked="True" />
                </StackPanel>
                <Button Content="Thêm"
                        Margin="5 0"
                        Width="80" Height="35"
                        Background="#2ECC71" Foreground="White"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
                <Button Content="Xóa"
                        Margin="5 0"
                        Width="80" Height="35"
                        Background="#E74C3C" Foreground="White"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
            </StackPanel>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto">
            <DataGrid Margin="0 8 0 0"
                      ItemsSource="{Binding DanhSachKhachHang}"
                      CanUserSortColumns="True"
                      CanUserAddRows="False"
                      AutoGenerateColumns="False"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                      IsReadOnly="True"
                      SelectionMode="Single">
                <DataGrid.Columns>

                    <!-- CheckBox chọn dòng -->
                    <DataGridCheckBoxColumn Binding="{Binding IsSelected}"
                                ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}">
                        <DataGridCheckBoxColumn.Header>
                            <Border Background="Transparent"
                                    Padding="6 0 6 0"
                                    HorizontalAlignment="Center">
                                <CheckBox
                                        HorizontalAlignment="Center"
                                        DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext}"
                                        IsChecked="{Binding IsAllItems3Selected}" />
                            </Border>
                        </DataGridCheckBoxColumn.Header>
                    </DataGridCheckBoxColumn>

                    <DataGridTextColumn Header="Mã khách hàng" Binding="{Binding MaKh}" />
                    <materialDesign:DataGridTextColumn Header="Họ tên khách hàng" Binding="{Binding HoTenKh}" />
                    <materialDesign:DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}" />

                    <DataGridTemplateColumn Header="Ngày sinh">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding NgaySinh, StringFormat=dd/MM/yyyy}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <materialDesign:DataGridTextColumn Header="Số điện thoại" Binding="{Binding SoDt}" />
                    <materialDesign:DataGridTextColumn Header="Email" Binding="{Binding Email}" />

                    <!-- Tài khoản -->
                    <materialDesign:DataGridTextColumn Header="Tên tài khoản" Binding="{Binding TaiKhoan}" />
                    <materialDesign:DataGridTextColumn Header="Vai trò TK" Binding="{Binding VaiTroTaiKhoan}" />

                    <!-- Thống kê đặt vé -->
                    <materialDesign:DataGridTextColumn Header="Số lần đặt vé" Binding="{Binding SoLanDatVe}" />
                    <materialDesign:DataGridTextColumn Header="Tổng tiền TT" 
                                            Binding="{Binding TongTienThanhToan, StringFormat={}{0:N0} đ}" />

                    <!-- Giấy tờ tùy thân -->
                    <DataGridTemplateColumn Header="Giấy tờ tùy thân">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                        ToolTip="Xem giấy tờ"
                                        Background="#3498DB"
                                        Foreground="White"
                                        Command="{Binding XemGiayToCommand}"
                                        CommandParameter="{Binding}">
                                    <materialDesign:PackIcon Kind="Eye" Width="20" Height="20" />
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </Grid>
</UserControl>
