<UserControl x:Class="AirTicketSalesManagement.View.Manager.TicketSalesReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="White" Margin="20">
        <!-- Nút in -->
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,25,30,0" Background="Transparent" Foreground="#3498DB"
                Width="55" Height="55" ToolTip="In báo cáo" Command="{Binding PrintCommand}">
            <Icon:PackIconMaterial Kind="Printer" HorizontalAlignment="Center"
                                   Width="22" Height="22" />
        </Button>

        <StackPanel Margin="0,20,0,80">
            <!-- Tiêu đề -->
            <TextBlock Text="BÁO CÁO" FontSize="28" FontWeight="Bold"
                       TextAlignment="Center" Margin="0,10" />

            <!-- Nội dung -->
            <TextBlock Text="Báo cáo doanh thu bán vé các chuyến bay" 
                       FontWeight="DemiBold"
                       FontSize="20" TextAlignment="Center" Margin="0,0,0,20" />

            <!-- Bảng thông tin -->
            <Border BorderBrush="#3498DB"
                    BorderThickness="1.5"
                    CornerRadius="6"
                    Padding="20"
                    Margin="20"
                    Background="White">

                <StackPanel>
                    <!-- Nhập tháng báo cáo -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Tháng báo cáo:" VerticalAlignment="Center" 
                                    FontWeight="Bold" FontSize="14" Margin="0,0,10,0"/>

                        <!-- ComboBox chọn tháng -->
                        <ComboBox Width="80" ItemsSource="{Binding Months}" 
                                    SelectedItem="{Binding SelectedMonth}" Margin="0,0,10,0"/>

                        <!-- ComboBox chọn năm -->
                        <ComboBox Width="100" ItemsSource="{Binding Years}" 
                                    SelectedItem="{Binding SelectedYear}" />
                    </StackPanel>


                    <!-- DataGrid -->
                    <DataGrid AutoGenerateColumns="False" 
                              HeadersVisibility="Column" 
                              CanUserAddRows="False"
                              ItemsSource="{Binding}"
                              Margin="0">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="STT" Width="Auto" Binding="{Binding}" />
                            <DataGridTextColumn Header="Chuyến Bay" Width="300" Binding="{Binding}" />
                            <DataGridTextColumn Header="Số Vé" Width="Auto" Binding="{Binding}" />
                            <DataGridTextColumn Header="Doanh Thu" Width="150" Binding="{Binding}" />
                            <DataGridTextColumn Header="Tỉ Lệ" Width="Auto" Binding="{Binding}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Ký nhận -->
        <Border BorderBrush="Black" BorderThickness="1" Width="200" Height="100"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,30">
            <StackPanel Margin="10">
                <TextBlock Text="Người lập báo cáo" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="(Ký, ghi rõ họ tên)" FontStyle="Italic" FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
