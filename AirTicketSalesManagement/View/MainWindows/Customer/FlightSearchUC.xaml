<UserControl x:Class="AirTicketSalesManagement.View.MainWindows.Customer.FlightSearchUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirTicketSalesManagement.View.MainWindows.Customer"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="260" d:DesignWidth="980">

    <Grid>
        <Border Background="#F5F7FA" CornerRadius="10" Padding="20" Margin="0 0 0 20">
            <StackPanel>
                <TextBlock Text="Nhập thông tin chuyến bay cần tìm" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"/>

                <UniformGrid Columns="2" Rows="3" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <!-- Điểm khởi hành -->
                    <ComboBox materialDesign:HintAssist.Hint="Điểm khởi hành"
                              IsEditable="True"
                              Width="200"
                              Margin="0 0 80 20"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                        <ComboBoxItem>TP.Hồ Chí Minh</ComboBoxItem>
                        <ComboBoxItem>Hà Nội</ComboBoxItem>
                        <ComboBoxItem>Huế</ComboBoxItem>
                        <ComboBoxItem>Đà Nẵng</ComboBoxItem>
                    </ComboBox>

                    <!-- Điểm đến -->
                    <ComboBox materialDesign:HintAssist.Hint="Điểm đến"
                              Margin="0 0 0 20"
                              IsEditable="True"
                              Width="200"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                        <ComboBoxItem>TP.Hồ Chí Minh</ComboBoxItem>
                        <ComboBoxItem>Hà Nội</ComboBoxItem>
                        <ComboBoxItem>Huế</ComboBoxItem>
                        <ComboBoxItem>Đà Nẵng</ComboBoxItem>
                    </ComboBox>

                    <!-- Ngày khởi hành -->
                    <DatePicker Width="200"
                                Margin="0 0 80 0"
                                VerticalAlignment="Center"
                                materialDesign:HintAssist.Hint="Ngày khởi hành"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

                    <!-- Số lượng ghế -->
                    <ComboBox materialDesign:HintAssist.Hint="Số lượng ghế"
                              Margin="0 0 0 0"
                              IsEditable="True"
                              Width="200"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                        <ComboBoxItem>1</ComboBoxItem>
                        <ComboBoxItem>2</ComboBoxItem>
                        <ComboBoxItem>3</ComboBoxItem>
                        <ComboBoxItem>4</ComboBoxItem>
                    </ComboBox>

                    <Border />

                    <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                            Background="#388FF4"
                            BorderBrush="Transparent"
                            Width="40" Height="40"
                            HorizontalAlignment="Right"
                            Margin="0 0 20 0"
                            ToolTip="MaterialDesignFloatingActionButton">
                        <materialDesign:PackIcon Kind="Magnify"
                                                 Height="24"
                                                 Width="24" />
                    </Button>
                </UniformGrid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
