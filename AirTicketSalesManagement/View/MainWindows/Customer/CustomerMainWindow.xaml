<Window x:Class="AirTicketSalesManagement.View.MainWindows.Customer.CustomerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:AirTicketSalesManagement.Resources.User_Controls"
        xmlns:body="clr-namespace:AirTicketSalesManagement.View.MainWindows.Customer"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="FlyTogether" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <uc:CustomerMenuBar Grid.Column="0"/>


        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Hàng 1 -->
            <DockPanel Grid.Row="0" 
                   LastChildFill="False">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <Image Source="/Resources/Images/removebg.png" 
                           Height="80" Width="80"
                           Margin="0 10 0 0"
                           VerticalAlignment="Center" />
                    <TextBlock Text="FLY TOGETHER" 
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Foreground="#388FF4"
                               Margin="10,0,0,0"/>
                </StackPanel>
            </DockPanel>

            <!--body:BookingHistoryUC Grid.Row="1"/-->
        </Grid>
    </Grid>
</Window>
