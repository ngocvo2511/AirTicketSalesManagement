<UserControl x:Class="AirTicketSalesManagement.View.Admin.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirTicketSalesManagement.View.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#5B4FD1"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5B4FD1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A3FB8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#5B4FD1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderBrush" Value="#5B4FD1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F7FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F0F0F0"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>

        <!-- Status converters and templates -->
        <DataTemplate x:Key="StatusTemplate">
            <Border CornerRadius="12" Padding="8,4">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Status}" Value="Đang khai thác">
                                <Setter Property="Background" Value="#E8F5E8"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Tạm dừng">
                                <Setter Property="Background" Value="#FFF3CD"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Ngừng khai thác">
                                <Setter Property="Background" Value="#F8D7DA"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Text="{Binding Status}" FontSize="12" FontWeight="Medium">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Đang khai thác">
                                    <Setter Property="Foreground" Value="#155724"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Tạm dừng">
                                    <Setter Property="Foreground" Value="#856404"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Ngừng khai thác">
                                    <Setter Property="Foreground" Value="#721C24"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="📊 BÁO CÁO THỐNG KÊ" Style="{StaticResource HeaderTextStyle}"/>

        <!-- Filter Section -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" Direction="270" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Filter Controls -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <!-- Report Type -->
                    <StackPanel Margin="0,0,30,0">
                        <TextBlock Text="Loại báo cáo" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Báo cáo theo năm" IsChecked="{Binding IsYearlyReport}" 
                                       GroupName="ReportType" Margin="0,0,20,0" FontSize="14"/>
                            <RadioButton Content="Báo cáo theo tháng" IsChecked="{Binding IsMonthlyReport}" 
                                       GroupName="ReportType" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Year Selection -->
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Năm" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Years}" 
                                SelectedItem="{Binding SelectedYear}"
                                Width="120" Style="{StaticResource ComboBoxStyle}"/>
                    </StackPanel>

                    <!-- Month Selection (only for monthly report) -->
                    <StackPanel Margin="0,0,20,0" Visibility="{Binding IsMonthlyReport, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="Tháng" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Months}" 
                                SelectedValue="{Binding SelectedMonth}"
                                SelectedValuePath="Value"
                                DisplayMemberPath="Name"
                                Width="120" Style="{StaticResource ComboBoxStyle}"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                        <Button Content="🔍 Tạo báo cáo" Command="{Binding GenerateReportCommand}" 
                              Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0"/>
                        <Button Content="🔄 Làm mới" Command="{Binding RefreshCommand}" 
                              Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                        <Button Content="📄 Xuất báo cáo" Command="{Binding ExportReportCommand}" 
                              Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Loading Indicator -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="⏳ Đang tạo báo cáo..." FontSize="14" Foreground="#666666" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Summary Section -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20"
                Visibility="{Binding ReportSummary, Converter={StaticResource InverseNonNullToVisibilityConverter}}">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" Direction="270" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Revenue -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="💰" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Tổng doanh thu" FontSize="14" Foreground="#666666" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ReportSummary.TotalRevenue, StringFormat='{}{0:N0} VNĐ'}" 
                             FontSize="20" FontWeight="Bold" Foreground="#5B4FD1" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Total Flights -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="✈️" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Tổng chuyến bay" FontSize="14" Foreground="#666666" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ReportSummary.TotalFlights, StringFormat='{}{0:N0}'}" 
                             FontSize="20" FontWeight="Bold" Foreground="#28A745" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Total Tickets Sold -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="🎫" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Tổng vé bán" FontSize="14" Foreground="#666666" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ReportSummary.TotalTicketsSold, StringFormat='{}{0:N0}'}" 
                             FontSize="20" FontWeight="Bold" Foreground="#FD7E14" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Occupancy Rate -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="📊" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Tỷ lệ lấp đầy" FontSize="14" Foreground="#666666" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ReportSummary.AverageOccupancyRate, StringFormat='{}{0:F1}%'}" 
                             FontSize="20" FontWeight="Bold" Foreground="#DC3545" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Data Section -->
        <Border Grid.Row="3" Background="White" CornerRadius="8" Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" Direction="270" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Data Header -->
                <TextBlock Grid.Row="0" Style="{StaticResource SectionHeaderStyle}">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="📋 {0}">
                            <Binding Path="IsYearlyReport" Converter="{StaticResource BooleanToStringConverter}" ConverterParameter="DANH SÁCH THỐNG KÊ THEO THÁNG|DANH SÁCH CHUYẾN BAY"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <!-- Yearly Report DataGrid -->
                <DataGrid Grid.Row="1" 
                        ItemsSource="{Binding YearlyReportData}"
                        Style="{StaticResource DataGridStyle}"
                        Visibility="{Binding IsYearlyReport, Converter={StaticResource BoolToVisibilityConverter}}">
                    <DataGrid.ColumnHeaderStyle>
                        <StaticResource ResourceKey="DataGridHeaderStyle"/>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tháng" Binding="{Binding MonthName}" Width="120"/>
                        <DataGridTextColumn Header="Doanh thu (VNĐ)" Binding="{Binding Revenue, StringFormat='{}{0:N0}'}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#5B4FD1"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Số chuyến bay" Binding="{Binding TotalFlights}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Số vé bán" Binding="{Binding TotalTicketsSold}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Monthly Report DataGrid -->
                <DataGrid Grid.Row="1" 
                        ItemsSource="{Binding MonthlyReportData}"
                        Style="{StaticResource DataGridStyle}"
                        Visibility="{Binding IsMonthlyReport, Converter={StaticResource BoolToVisibilityConverter}}">
                    <DataGrid.ColumnHeaderStyle>
                        <StaticResource ResourceKey="DataGridHeaderStyle"/>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Số hiệu CB" Binding="{Binding FlightNumber}" Width="100"/>
                        <DataGridTextColumn Header="Sân bay đi" Binding="{Binding DepartureAirport}" Width="120"/>
                        <DataGridTextColumn Header="Sân bay đến" Binding="{Binding ArrivalAirport}" Width="120"/>
                        <DataGridTextColumn Header="Hãng hàng không" Binding="{Binding Airline}" Width="140"/>
                        <DataGridTextColumn Header="Thời gian bay" Binding="{Binding DepartureTime, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="140"/>
                        <DataGridTextColumn Header="Thời lượng" Binding="{Binding FlightDuration}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Vé bán/Tổng" Width="100">
                            <DataGridTextColumn.Binding>
                                <MultiBinding StringFormat="{}{0}/{1}">
                                    <Binding Path="TicketsSold"/>
                                    <Binding Path="TotalSeats"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Doanh thu (VNĐ)" Binding="{Binding Revenue, StringFormat='{}{0:N0}'}" Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#5B4FD1"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Trạng thái" Width="120" CellTemplate="{StaticResource StatusTemplate}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty State -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                          Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsYearlyReport}" Value="True"/>
                                        <Condition Binding="{Binding YearlyReportData.Count}" Value="0"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsMonthlyReport}" Value="True"/>
                                        <Condition Binding="{Binding MonthlyReportData.Count}" Value="0"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="📝" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                    <TextBlock Text="Không có dữ liệu để hiển thị" FontSize="16" Foreground="#666666" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <TextBlock Text="Vui lòng chọn thời gian khác hoặc kiểm tra dữ liệu" FontSize="14" Foreground="#999999" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
